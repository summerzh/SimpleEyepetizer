<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_cover_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_desc_height"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_space_10"
        android:paddingBottom="@dimen/common_space_10">

        <ImageView
            tools:src="@mipmap/ic_launcher"
            android:id="@+id/mIvHeadPortrait"
            android:layout_width="@dimen/home_item_headportrait_size"
            android:layout_height="@dimen/home_item_headportrait_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_space_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/common_textSize_18"
                android:textStyle="bold"
                tools:text="hello" />

            <TextView
                android:id="@+id/mTvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/common_textSize_14"
                tools:text="hello" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mIvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_space_20"
            tools:src="@mipmap/ic_launcher" />

    </LinearLayout>

</LinearLayout>